<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <!-- Main Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="@android:color/darker_gray" />
                    <!-- TODO Chose the right color -->
            </LinearLayout>

            <!-- First Question -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_question"
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <RadioGroup
                    android:id="@+id/first_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/first_answer" />

                    <RadioButton
                        android:id="@+id/correct_first_answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/second_answer" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/third_answer" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="displayResults"
                        android:text="@string/result"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/show_good_answers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:onClick="showGoodAnswers"
                        android:text="@string/answers"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/reset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="resetButton"
                        android:text="@string/reset"
                        android:textSize="16sp" />
                    <!-- TODO Fix button errors -->

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>
</android.support.constraint.ConstraintLayout>
